<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.main.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_top_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/main_top_layout"
        android:background="@drawable/layout_shadow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:letterSpacing="0.2"
        android:text="PROG"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrography"
        android:fontFamily="@font/noto_sans_bold"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="19dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/ic_logout"/>

    <ImageView
        android:id="@+id/main_circle_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/main_top_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="38dp"
        android:background="@drawable/solid_circle_view"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/main_circle_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_prog_white_small"/>

    <TextView
        android:id="@+id/main_name_text"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/main_circle_view"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="홍길동"
        android:textSize="20sp"
        android:textColor="#272727"
        android:fontFamily="@font/noto_sans_regular"/>

    <View
        android:id="@+id/main_camera_button"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintTop_toBottomOf="@id/main_name_text"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/camera_qr_button"/>

    <ImageView
        android:id="@+id/main_camera_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="@id/main_camera_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="62dp"
        android:background="@drawable/ic_camera_pink"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@id/main_camera_image"
        android:layout_marginTop="15dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"
        android:includeFontPadding="false"
        android:text="QR코드 촬영하기"
        android:textSize="20dp"
        android:textColor="@color/colorPrography"
        android:fontFamily="@font/noto_sans_regular"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>